@model WebAppTest.Controllers.Note

@{
    ViewData["Title"] = "Details";
}

<h1>Детали записи</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Текст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date_system)
        </dd>
        <dt class="col-sm-2">
            Комментарий
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlNote)
        </dd>
        <dt class = "col-sm-2">
            Тег
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tag.Name)
        </dd>
        <dt class = "col-sm-2">
            Категория
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

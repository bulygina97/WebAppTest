@model WebAppTest.Controllers.Note

@{
    ViewData["Title"] = "Delete";
}

<h2>Удаление записи</h2>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            #
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Текст
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_system)
        </dd>
        <dt class="col-sm-2">
            Url
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrlNote)
        </dd>
        <dt class="col-sm-2">
            Тег
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Name)
        </dd>
        <dt class="col-sm-2">
            Категория
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-outline-secondary" />  |  
        <a asp-action="Index">Вернуться к списку</a>
    </form>
    
</div>


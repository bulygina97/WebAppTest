@model WebAppTest.Models.Tag

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Имя Тега
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Url
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlSlug)
        </dd>
        <dt class = "col-sm-2">
            Доп
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-outline-secondary" />  |  
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
